<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" >


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:cardBackgroundColor="#FFD429"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="114dp" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Vangills"
            android:textFontWeight="500"
            android:textAlignment="center"
            android:textColor="#414141"
            android:textSize="18dp" />

        <Button
            android:id="@+id/manuBtn"
            android:layout_width="35dp"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/ic_menu_black_24dp"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/cartBtn"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/shopping_cart_icon"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/personBtn"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginLeft="370dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/person_icon"
            android:textColor="#FFFFFF" />
    </androidx.cardview.widget.CardView>



    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        app:layout_column="2"
        app:layout_row="0">

        <androidx.cardview.widget.CardView
            app:layout_gravity="fill_horizontal"
            android:layout_width="190dp"
            android:layout_margin="9dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="7dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#fff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_column="0"
                app:layout_row="0">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    app:layout_column="0"
                    app:layout_row="1"
                    android:background="@drawable/anchor"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="Anchor Milk Powder"
                    android:textColor="@color/colorPrimaryDark"
                    android:textFontWeight="600"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    app:layout_column="0"
                    app:layout_row="1" />

                <TextView

                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="Rs.700"
                    android:textColor="@color/colorPrimaryDark"
                    android:textFontWeight="600"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    app:layout_column="0"
                    app:layout_row="1" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="View"
                    android:layout_marginTop="10dp"
                    android:textColor="#fff"
                    android:background="@color/colorPrimaryDark"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <!--app:layout_columnWeight="1"-->


        <androidx.cardview.widget.CardView
            app:layout_gravity="fill_horizontal"
            android:layout_width="190dp"
            android:layout_margin="9dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="7dp"
